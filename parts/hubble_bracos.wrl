#VRML V2.0 utf8

#Braço
Transform {
  translation 0.5 0 0
  rotation 0 0 0 0
  children [
    Shape {
      geometry Cylinder {
        radius 0.05
        height 6.25
      }
      appearance Appearance {
        material Material {
          diffuseColor 0.2 0.2 0.2
          shininess 1
        }
      }
    }
  ]
}

